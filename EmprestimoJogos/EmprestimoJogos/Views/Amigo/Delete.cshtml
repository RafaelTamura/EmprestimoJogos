@model EmprestimoJogos.Models.Amigo

@{
    ViewBag.Title = "Remover Amigo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Remover</h2>

<h3>Deseja realmente remover o amigo?</h3>
<div>
    @*<h4>Amigo</h4>*@
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IdLocalidade)
        </dt>

        <dd>
            @if (Model.Localidade != null)
            {
                @Html.DisplayFor(model => model.Localidade.Nome)
            }
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Remover" class="btn btn-default" /> |
            @Html.ActionLink("Voltar", "Index")
        </div>
    }
</div>
