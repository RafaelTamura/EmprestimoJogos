@model IEnumerable<EmprestimoJogos.Models.Emprestimo>

@{
    ViewBag.Title = "Empréstimos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Empréstimos</h2>

<p>
    @Html.ActionLink("Novo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdAmigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdJogo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataEmprestimo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @if (item.Amigo != null)
            {
                @Html.DisplayFor(modelitem => item.Amigo.Nome)
            }
        </td>
        <td>
            @if (item.Jogo != null)
            {
                @Html.DisplayFor(modelitem => item.Jogo.Nome)
            }
        </td>
        <td>
            @Convert.ToDateTime(item.DataEmprestimo).ToString("dd/MM/yyyy")
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdEmprestimo }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.IdEmprestimo }) |
            @Html.ActionLink("Remover", "Delete", new { id=item.IdEmprestimo })
        </td>
    </tr>
}

</table>
